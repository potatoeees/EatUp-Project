<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#8ADECA"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="-100dp"
            android:src="@drawable/main_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="-60dp"
            android:text="@string/home"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/howtousebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-20dp"
            android:text="@string/how_to_use"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contactusbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="200dp"
            android:text="@string/contact_us"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/joinnowwhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:text='@string/join_now'
            android:textColor="#000000"
            android:layout_marginStart="287dp"
            android:layout_marginTop="-34dp"
            android:textSize="15sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:indeterminate="false"
            android:max="100"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:progress="80"
            android:progressTint="#8ADECA" />

        <TextView
            android:id="@+id/default1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:text="Remind me when food expiring in :"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/setting1Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <RadioButton
                android:id="@+id/S1O1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 days" />

            <RadioButton
                android:id="@+id/S1O2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 days" />

            <RadioButton
                android:id="@+id/S1O3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 days"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/default2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:text="After that , send reminders every : "
                android:textColor="#000000" />

            <RadioGroup
                android:id="@+id/setting2Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:id="@+id/S201"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 days" />

                <RadioButton
                    android:id="@+id/S202"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 days" />

                <RadioButton
                    android:id="@+id/S203"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days" />
            </RadioGroup>

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="179dp"
                android:layout_height="70dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="Let's Eat Up "
                android:textSize="18sp"
                app:backgroundTint="#8ADECA"
                app:cornerRadius="30dp"
                android:textColor="@color/black"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>













