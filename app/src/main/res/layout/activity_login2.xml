<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="EatUp"
            app:titleTextColor="#000000" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="70dp"
            android:text="Good to see you again !"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:text="Let's Eat Up"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:padding="20dp">

            <EditText
                android:id="@+id/login_emailText"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/textborder"
                android:hint="Email"
                android:padding="8dp" />

            <EditText
                android:id="@+id/login_passwordText"
                android:layout_width="336dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/textborder"
                android:hint="Password"
                android:padding="8dp" />

        </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/registerBtn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Dont have an account?" />

    <TextView
        android:id="@+id/fpBtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="20dp"
        android:text="Forgot password?"></TextView>

    <TextView
        android:id="@+id/partnerBtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="20dp"
        android:text="Be our partner"></TextView>

    <Button
                android:id="@+id/loginBtn"
                android:layout_width="179dp"
                android:layout_height="70dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="100dp"
                android:text="Log In"
                android:textSize="18sp"
                app:backgroundTint="@color/teal_200"
                app:cornerRadius="30dp" />

</RelativeLayout>

    </LinearLayout>


</ScrollView>



